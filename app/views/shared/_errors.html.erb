<% if obj.errors.any? %>
  <div class="row">
    <div class="alert alert-danger col-mid-8 col-mid-offset-2">
      <h5>Please correct the following errors:</h5>
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>